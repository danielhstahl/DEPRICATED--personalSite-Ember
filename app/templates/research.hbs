<div class='vertical-space mdl-layout--small-screen-only'></div><!--this is to drop the card below the hamburger bar-->
<div class='mdl-grid max-width'>
    {{#each model as |research|}}
        <div class="mdl-cell mdl-cell--4-col-phone mdl-cell--6-col-tablet mdl-cell--8-col mdl-card mdl-shadow--2dp ">
            <div class="mdl-card__title card-style " style="background:url('{{research.image}}') center / cover;">
            </div>
            <div class="mdl-card__supporting-text">
                <h2 class="mdl-card__title-text grey-font-800">{{research.title}}</h2>
               {{{research.text}}}
            </div>
            <div class="mdl-card__supporting-text">
              {{#link-to research.route}}{{research.label}}{{/link-to}}
              {{#if research.url}}
                <a href='{{research.url}}'>External link</a>
              {{/if}}
            </div>
        </div>

    {{/each}}
</div>
