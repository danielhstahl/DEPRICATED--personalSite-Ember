<form action='#'>
  {{#each inputs as |input|}}
    <div class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label'>
      <input class='mdl-textfield__input' value='{{input.value}}' type='text' pattern="-?[0-9]*(\.[0-9]+)?" min='{{input.min}}' max='{{input.max}}'>
      <label class='mdl-textfield__label'>{{input.label}}</label>
      {{#if input.max}}
        <span class="mdl-textfield__error">Input is not a number between {{input.min}} and {{input.max}}</span>
      {{else}}
        <span class="mdl-textfield__error">Input is not a number</span>
      {{/if}}
    </div>
  {{/each}}
</form>
