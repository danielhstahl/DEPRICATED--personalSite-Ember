<div class='mdl-grid'>
  {{#each inputs as |input|}}
    {{mdl-textfield class='grey-font-800 mdl-cell mdel-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone' label=input.label value=input.value pattern='-?[0-9]*(\.[0-9]+)?' errorMessage='Input is not a number'}}

  {{/each}}
  <div class='mdl-cell mdel-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone'>
    <button class="mdl-button text-color-contact mdl-color--grey-800 mdl-button--raised mdl-js-button mdl-js-ripple-effect" type='submit'>Run</button>
  </div>
</div>
