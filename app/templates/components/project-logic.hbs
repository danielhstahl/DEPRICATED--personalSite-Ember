<div class='vertical-space mdl-layout--small-screen-only'></div><!--this is to drop the card below the hamburger bar-->
<div class='mdl-grid max-width'>
    {{#each projects as |project|}}
        <div id='{{project.id}}' class="mdl-cell mdl-cell--4-col-phone mdl-cell--6-col-tablet mdl-cell--8-col mdl-card mdl-shadow--2dp ">
            <div class="mdl-card__title card-style " style="background:url('{{project.image}}') center / cover;">

            </div>
            <div class="mdl-card__supporting-text">
                <h2 class="mdl-card__title-text grey-font-800">{{project.title}}</h2>
               {{{project.text}}}
            </div>


            {{control-form subpartial=project.partial socket=socket documentationUrl=project.documentationUrl}}
        </div>
    {{/each}}
</div>
<div class='largewhitespace'></div>
